            echo ""
            show_nginx_version 2>/dev/null
            echo ""
            show_php_version 2>/dev/null
            echo ""
            show_mysql_version 2>/dev/null
            echo ""
            show_postfix_version 2>/dev/null
            echo ""
            show_dovecot_version 2>/dev/null
        }
        ;;
esac
