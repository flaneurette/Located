```
show_apache_version() {
    echo -e "${COLOR}Apache Version Information:${RESET}\n"
    
    # Detect apache2 or httpd
    if command -v apache2 >/dev/null 2>&1; then
        APACHE_CMD="apache2"
    elif command -v httpd >/dev/null 2>&1; then
        APACHE_CMD="httpd"
    else
        echo -e "  ${RED}Apache not installed${RESET}"
        return 1
    fi
    
    # 1. Installed Version
    VERSION=$($APACHE_CMD -v | grep "Server version" | cut -d: -f2 | xargs)
    echo -e "  ${NUMCOLOR}Installed:${RESET}        $VERSION"
    
    # 2. Build Date
    BUILD=$($APACHE_CMD -v | grep "Server built" | cut -d: -f2- | xargs)
    echo -e "  ${NUMCOLOR}Built:${RESET}            $BUILD"
    
    # 3. Running Status
    if systemctl is-active --quiet apache2 2>/dev/null || systemctl is-active --quiet httpd 2>/dev/null; then
        echo -e "  ${NUMCOLOR}Status:${RESET}           ${GREEN}Running${RESET}"
        
        # Get running process info
        RUNNING_VER=$(ps aux | grep -E "apache2|httpd" | grep -v grep | head -1)
        if [[ -n "$RUNNING_VER" ]]; then
            UPTIME=$(systemctl show -p ActiveEnterTimestamp apache2 httpd 2>/dev/null | cut -d= -f2)
            echo -e "  ${NUMCOLOR}Started:${RESET}          $UPTIME"
        fi
    else
        echo -e "  ${NUMCOLOR}Status:${RESET}           ${RED}Stopped${RESET}"
    fi
    
    echo ""
    
    # 4. Configuration
    CONFIG=$($APACHE_CMD -V | grep "SERVER_CONFIG_FILE" | cut -d'"' -f2)
    ROOT=$($APACHE_CMD -V | grep "HTTPD_ROOT" | cut -d'"' -f2)
    FULL_CONFIG="$ROOT/$CONFIG"
    echo -e "  ${NUMCOLOR}Config File:${RESET}      $FULL_CONFIG"
    
    # 5. MPM (Multi-Processing Module)
    MPM=$($APACHE_CMD -V | grep "Server MPM" | cut -d: -f2 | xargs)
    echo -e "  ${NUMCOLOR}MPM:${RESET}              $MPM"
    
    # 6. Key Settings
    echo ""
    echo -e "  ${NUMCOLOR}Timeout:${RESET}          $(grep -E "^Timeout" $FULL_CONFIG 2>/dev/null | awk '{print $2}')s"
    echo -e "  ${NUMCOLOR}KeepAlive:${RESET}        $(grep -E "^KeepAlive" $FULL_CONFIG 2>/dev/null | awk '{print $2}')"
    echo -e "  ${NUMCOLOR}MaxClients:${RESET}       $(grep -E "MaxRequestWorkers|MaxClients" $FULL_CONFIG 2>/dev/null | head -1 | awk '{print $2}')"
    
    echo ""
    
    # 7. Loaded Modules
    echo -e "  ${NUMCOLOR}Loaded Modules:${RESET}"
    CRITICAL_MODS=("rewrite" "ssl" "headers" "proxy" "proxy_fcgi" "deflate" "expires" "security2")
    LOADED_MODS=$($APACHE_CMD -M 2>/dev/null)
    
    for mod in "${CRITICAL_MODS[@]}"; do
        if echo "$LOADED_MODS" | grep -qi "${mod}_module"; then
            echo -e "    ${GREEN}[LOADED]${RESET} mod_$mod"
        else
            echo -e "    ${RED}[NOT LOADED]${RESET} mod_$mod"
        fi
    done
    
    # Count total modules
    TOTAL_MODS=$(echo "$LOADED_MODS" | grep -c "_module")
    echo -e "\n  ${NUMCOLOR}Total Modules:${RESET}    $TOTAL_MODS loaded"
    
    # 8. Virtual Hosts
    echo ""
    VHOSTS_ENABLED=$(ls -1 /etc/apache2/sites-enabled/ 2>/dev/null | wc -l || ls -1 /etc/httpd/conf.d/ 2>/dev/null | grep ".conf" | wc -l)
    echo -e "  ${NUMCOLOR}Virtual Hosts:${RESET}    $VHOSTS_ENABLED enabled"
    
    # 9. Error Log Location
    ERROR_LOG=$(grep -E "^ErrorLog" $FULL_CONFIG 2>/dev/null | head -1 | awk '{print $2}')
    echo -e "  ${NUMCOLOR}Error Log:${RESET}        $ERROR_LOG"
}
