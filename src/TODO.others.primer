## Nginx

```
show_nginx_version() {
    echo -e "${COLOR}Nginx Version Information:${RESET}\n"
    
    if ! command -v nginx >/dev/null 2>&1; then
        echo -e "  ${RED}Nginx not installed${RESET}"
        return 1
    fi
    
    # 1. Installed Version
    VERSION=$(nginx -v 2>&1 | cut -d/ -f2)
    echo -e "  ${NUMCOLOR}Installed:${RESET}        nginx/$VERSION"
    
    # 2. Build Info
    echo ""
    echo -e "  ${NUMCOLOR}Build Configuration:${RESET}"
    nginx -V 2>&1 | grep -o -- '--with-[^ ]*' | head -5 | while read flag; do
        echo -e "    ${GREEN}[ENABLED]${RESET} $flag"
    done
    
    # 3. Running Status
    echo ""
    if systemctl is-active --quiet nginx 2>/dev/null; then
        echo -e "  ${NUMCOLOR}Status:${RESET}           ${GREEN}Running${RESET}"
        
        # Worker processes
        WORKERS=$(ps aux | grep "nginx: worker" | grep -v grep | wc -l)
        echo -e "  ${NUMCOLOR}Worker Processes:${RESET} $WORKERS"
    else
        echo -e "  ${NUMCOLOR}Status:${RESET}           ${RED}Stopped${RESET}"
    fi
    
    echo ""
    
    # 4. Configuration
    CONFIG=$(nginx -V 2>&1 | grep -o 'conf-path=[^ ]*' | cut -d= -f2)
    echo -e "  ${NUMCOLOR}Config File:${RESET}      $CONFIG"
    
    # 5. Virtual Hosts
    VHOSTS=$(ls -1 /etc/nginx/sites-enabled/ 2>/dev/null | wc -l)
    echo -e "  ${NUMCOLOR}Virtual Hosts:${RESET}    $VHOSTS enabled"
    
    # 6. Error Log
    ERROR_LOG=$(nginx -V 2>&1 | grep -o 'error-log-path=[^ ]*' | cut -d= -f2)
    [[ -z "$ERROR_LOG" ]] && ERROR_LOG="/var/log/nginx/error.log"
    echo -e "  ${NUMCOLOR}Error Log:${RESET}        $ERROR_LOG"
    
    # 7. Access Log
    ACCESS_LOG="/var/log/nginx/access.log"
    echo -e "  ${NUMCOLOR}Access Log:${RESET}       $ACCESS_LOG"
}
