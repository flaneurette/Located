## Postfix

```
show_postfix_version() {
    echo -e "${COLOR}Postfix Version Information:${RESET}\n"
    
    if ! command -v postconf >/dev/null 2>&1; then
        echo -e "  ${RED}Postfix not installed${RESET}"
        return 1
    fi
    
    # 1. Installed Version
    VERSION=$(postconf mail_version | cut -d= -f2 | xargs)
    echo -e "  ${NUMCOLOR}Installed:${RESET}        Postfix $VERSION"
    
    # 2. Running Status
    if systemctl is-active --quiet postfix 2>/dev/null; then
        echo -e "  ${NUMCOLOR}Status:${RESET}           ${GREEN}Running${RESET}"
        
        # Queue count
        QUEUE=$(find /var/spool/postfix/deferred -type f 2>/dev/null | wc -l)
        if [[ $QUEUE -gt 0 ]]; then
            echo -e "  ${NUMCOLOR}Mail Queue:${RESET}       ${YELLOW}$QUEUE messages${RESET}"
        else
            echo -e "  ${NUMCOLOR}Mail Queue:${RESET}       ${GREEN}Empty${RESET}"
        fi
    else
        echo -e "  ${NUMCOLOR}Status:${RESET}           ${RED}Stopped${RESET}"
    fi
    
    echo ""
    
    # 3. Configuration
    CONFIG=$(postconf config_directory | cut -d= -f2 | xargs)
    echo -e "  ${NUMCOLOR}Config Dir:${RESET}       $CONFIG"
    echo -e "  ${NUMCOLOR}Main Config:${RESET}      $CONFIG/main.cf"
    
    echo ""
    
    # 4. Key Settings
    MYHOSTNAME=$(postconf myhostname | cut -d= -f2 | xargs)
    echo -e "  ${NUMCOLOR}Hostname:${RESET}         $MYHOSTNAME"
    
    MYDOMAIN=$(postconf mydomain | cut -d= -f2 | xargs)
    echo -e "  ${NUMCOLOR}Domain:${RESET}           $MYDOMAIN"
    
    MYORIGIN=$(postconf myorigin | cut -d= -f2 | xargs)
    echo -e "  ${NUMCOLOR}Origin:${RESET}           $MYORIGIN"
    
    INET=$(postconf inet_interfaces | cut -d= -f2 | xargs)
    echo -e "  ${NUMCOLOR}Listen On:${RESET}        $INET"
    
    echo ""
    
    # 5. SMTP Settings
    echo -e "  ${NUMCOLOR}SMTP Settings:${RESET}"
    
    SMTPD_BANNER=$(postconf smtpd_banner | cut -d= -f2 | xargs)
    echo -e "    Banner: $SMTPD_BANNER"
    
    MSG_SIZE=$(postconf message_size_limit | cut -d= -f2 | xargs)
    MSG_SIZE_MB=$((MSG_SIZE / 1024 / 1024))
    echo -e "    Max Message Size: ${MSG_SIZE_MB}M"
    
    MAILBOX_SIZE=$(postconf mailbox_size_limit | cut -d= -f2 | xargs)
    MAILBOX_SIZE_MB=$((MAILBOX_SIZE / 1024 / 1024))
    echo -e "    Max Mailbox Size: ${MAILBOX_SIZE_MB}M"
    
    echo ""
    
    # 6. TLS/SSL
    echo -e "  ${NUMCOLOR}TLS/SSL:${RESET}"
    
    TLS=$(postconf smtpd_use_tls | cut -d= -f2 | xargs)
    if [[ "$TLS" == "yes" ]]; then
        echo -e "    ${GREEN}[ENABLED]${RESET} TLS"
        
        CERT=$(postconf smtpd_tls_cert_file | cut -d= -f2 | xargs)
        echo -e "    Certificate: $CERT"
        
        KEY=$(postconf smtpd_tls_key_file | cut -d= -f2 | xargs)
        echo -e "    Key: $KEY"
    else
        echo -e "    ${RED}[DISABLED]${RESET} TLS"
    fi
    
    echo ""
    
    # 7. SASL Authentication
    SASL=$(postconf smtpd_sasl_auth_enable | cut -d= -f2 | xargs)
    if [[ "$SASL" == "yes" ]]; then
        echo -e "  ${NUMCOLOR}SASL Auth:${RESET}        ${GREEN}Enabled${RESET}"
    else
        echo -e "  ${NUMCOLOR}SASL Auth:${RESET}        ${RED}Disabled${RESET}"
    fi
    
    # 8. Restrictions
    echo ""
    echo -e "  ${NUMCOLOR}Restrictions:${RESET}"
    
    RELAY=$(postconf smtpd_relay_restrictions | cut -d= -f2 | xargs)
    echo -e "    Relay: ${RELAY:0:60}..."
    
    RECIPIENT=$(postconf smtpd_recipient_restrictions | cut -d= -f2 | xargs)
    echo -e "    Recipient: ${RECIPIENT:0:60}..."
    
    # 9. Logs
    echo ""
    MAILLOG="/var/log/mail.log"
    [[ ! -f "$MAILLOG" ]] && MAILLOG="/var/log/maillog"
    echo -e "  ${NUMCOLOR}Mail Log:${RESET}         $MAILLOG"
}
