## Dovecot

```
show_dovecot_version() {
    echo -e "${COLOR}Dovecot Version Information:${RESET}\n"
    
    if ! command -v dovecot >/dev/null 2>&1; then
        echo -e "  ${RED}Dovecot not installed${RESET}"
        return 1
    fi
    
    # 1. Installed Version
    VERSION=$(dovecot --version 2>/dev/null)
    echo -e "  ${NUMCOLOR}Installed:${RESET}        $VERSION"
    
    # 2. Running Status
    if systemctl is-active --quiet dovecot 2>/dev/null; then
        echo -e "  ${NUMCOLOR}Status:${RESET}           ${GREEN}Running${RESET}"
        
        # Active connections
        CONNECTIONS=$(doveadm who 2>/dev/null | wc -l)
        if [[ $CONNECTIONS -gt 0 ]]; then
            echo -e "  ${NUMCOLOR}Active Users:${RESET}     $CONNECTIONS"
        fi
    else
        echo -e "  ${NUMCOLOR}Status:${RESET}           ${RED}Stopped${RESET}"
    fi
    
    echo ""
    
    # 3. Configuration
    CONFIG=$(doveconf -n | grep "^# " | head -1 | awk '{print $2}' | tr -d '()')
    echo -e "  ${NUMCOLOR}Config File:${RESET}      $CONFIG"
    
    echo ""
    
    # 4. Protocols
    echo -e "  ${NUMCOLOR}Protocols:${RESET}"
    PROTOCOLS=$(doveconf protocols | cut -d= -f2 | xargs)
    for proto in $PROTOCOLS; do
        echo -e "    ${GREEN}[ENABLED]${RESET} $proto"
    done
    
    echo ""
    
    # 5. SSL/TLS
    SSL=$(doveconf ssl | cut -d= -f2 | xargs)
    if [[ "$SSL" == "yes" ]] || [[ "$SSL" == "required" ]]; then
        echo -e "  ${NUMCOLOR}SSL/TLS:${RESET}          ${GREEN}$SSL${RESET}"
        
        CERT=$(doveconf ssl_cert | cut -d= -f2 | xargs | tr -d '<')
        echo -e "  ${NUMCOLOR}Certificate:${RESET}      $CERT"
        
        KEY=$(doveconf ssl_key | cut -d= -f2 | xargs | tr -d '<')
        echo -e "  ${NUMCOLOR}Key:${RESET}              $KEY"
    else
        echo -e "  ${NUMCOLOR}SSL/TLS:${RESET}          ${RED}Disabled${RESET}"
    fi
    
    echo ""
    
    # 6. Mail Location
    MAIL_LOCATION=$(doveconf mail_location | cut -d= -f2 | xargs)
    echo -e "  ${NUMCOLOR}Mail Location:${RESET}    $MAIL_LOCATION"
    
    # 7. Authentication
    AUTH_MECHS=$(doveconf auth_mechanisms | cut -d= -f2 | xargs)
    echo -e "  ${NUMCOLOR}Auth Methods:${RESET}     $AUTH_MECHS"
    
    # 8. Logs
    echo ""
    LOG_PATH=$(doveconf log_path | cut -d= -f2 | xargs)
    [[ "$LOG_PATH" == "syslog" ]] && LOG_PATH="/var/log/mail.log"
    echo -e "  ${NUMCOLOR}Log Path:${RESET}         $LOG_PATH"
}
