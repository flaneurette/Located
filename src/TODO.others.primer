## MySQL/MariaDB

```
show_mysql_version() {
    echo -e "${COLOR}MySQL/MariaDB Version Information:${RESET}\n"
    
    # Detect MySQL or MariaDB
    if command -v mysql >/dev/null 2>&1; then
        MYSQL_CMD="mysql"
    else
        echo -e "  ${RED}MySQL/MariaDB not installed${RESET}"
        return 1
    fi
    
    # 1. Installed Version
    VERSION=$(mysql --version 2>/dev/null)
    echo -e "  ${NUMCOLOR}Installed:${RESET}        $VERSION"
    
    # 2. Server Running Status
    if systemctl is-active --quiet mysql 2>/dev/null || systemctl is-active --quiet mariadb 2>/dev/null; then
        echo -e "  ${NUMCOLOR}Status:${RESET}           ${GREEN}Running${RESET}"
        
        # 3. Get server variables (requires connection)
        if mysql -e "SELECT 1" &>/dev/null; then
            SERVER_VER=$(mysql -sN -e "SELECT VERSION();")
            echo -e "  ${NUMCOLOR}Server Version:${RESET}   $SERVER_VER"
            
            echo ""
            
            # 4. Key Settings
            MAX_CONN=$(mysql -sN -e "SHOW VARIABLES LIKE 'max_connections';" | awk '{print $2}')
            echo -e "  ${NUMCOLOR}Max Connections:${RESET}  $MAX_CONN"
            
            BUFFER=$(mysql -sN -e "SHOW VARIABLES LIKE 'innodb_buffer_pool_size';" | awk '{print $2}')
            BUFFER_MB=$((BUFFER / 1024 / 1024))
            echo -e "  ${NUMCOLOR}InnoDB Buffer:${RESET}    ${BUFFER_MB}M"
            
            QUERY_CACHE=$(mysql -sN -e "SHOW VARIABLES LIKE 'query_cache_size';" | awk '{print $2}')
            QUERY_CACHE_MB=$((QUERY_CACHE / 1024 / 1024))
            echo -e "  ${NUMCOLOR}Query Cache:${RESET}      ${QUERY_CACHE_MB}M"
            
            MAX_PACKET=$(mysql -sN -e "SHOW VARIABLES LIKE 'max_allowed_packet';" | awk '{print $2}')
            MAX_PACKET_MB=$((MAX_PACKET / 1024 / 1024))
            echo -e "  ${NUMCOLOR}Max Packet:${RESET}       ${MAX_PACKET_MB}M"
            
            echo ""
            
            # 5. Storage Engines
            echo -e "  ${NUMCOLOR}Storage Engines:${RESET}"
            ENGINES=$(mysql -sN -e "SHOW ENGINES;" | grep -E "InnoDB|MyISAM|MEMORY|CSV")
            echo "$ENGINES" | while read engine support; do
                if [[ "$support" == "DEFAULT" ]]; then
                    echo -e "    ${GREEN}[ENABLED]${RESET} $engine (default)"
                elif [[ "$support" == "YES" ]]; then
                    echo -e "    ${GREEN}[ENABLED]${RESET} $engine"
                else
                    echo -e "    ${RED}[DISABLED]${RESET} $engine"
                fi
            done
            
            echo ""
            
            # 6. Database Count
            DB_COUNT=$(mysql -sN -e "SELECT COUNT(*) FROM information_schema.SCHEMATA WHERE SCHEMA_NAME NOT IN ('information_schema','performance_schema','mysql','sys');")
            echo -e "  ${NUMCOLOR}User Databases:${RESET}   $DB_COUNT"
            
            # 7. Uptime
            UPTIME=$(mysql -sN -e "SHOW STATUS LIKE 'Uptime';" | awk '{print $2}')
            UPTIME_DAYS=$((UPTIME / 86400))
            UPTIME_HOURS=$(( (UPTIME % 86400) / 3600 ))
            echo -e "  ${NUMCOLOR}Uptime:${RESET}           ${UPTIME_DAYS}d ${UPTIME_HOURS}h"
            
        else
            echo -e "  ${YELLOW}(Cannot connect to server - authentication required)${RESET}"
        fi
    else
        echo -e "  ${NUMCOLOR}Status:${RESET}           ${RED}Stopped${RESET}"
    fi
    
    echo ""
    
    # 8. Configuration File
    CONFIG="/etc/mysql/my.cnf"
    if [[ -f "$CONFIG" ]]; then
        echo -e "  ${NUMCOLOR}Config File:${RESET}      $CONFIG"
    else
        CONFIG="/etc/my.cnf"
        [[ -f "$CONFIG" ]] && echo -e "  ${NUMCOLOR}Config File:${RESET}      $CONFIG"
    fi
    
    # 9. Data Directory
    if [[ -d "/var/lib/mysql" ]]; then
        DATA_SIZE=$(du -sh /var/lib/mysql 2>/dev/null | awk '{print $1}')
        echo -e "  ${NUMCOLOR}Data Directory:${RESET}   /var/lib/mysql ($DATA_SIZE)"
    fi
    
    # 10. Error Log
    ERROR_LOG=$(grep -E "^log.error" $CONFIG 2>/dev/null | awk '{print $3}' | head -1)
    [[ -z "$ERROR_LOG" ]] && ERROR_LOG="/var/log/mysql/error.log"
    echo -e "  ${NUMCOLOR}Error Log:${RESET}        $ERROR_LOG"
}
